<IfModule mod_rewrite.c>
	RewriteEngine on
	
	RewriteCond %{HTTPS} !on
	RewriteCond %{HTTP_HOST} ^animaisderua.org [NC,OR]
	RewriteCond %{HTTP_HOST} ^www.animaisderua.org [NC]
	RewriteRule ^(.*)$ https://animaisderua.org/$1 [L,R=301]

	RewriteCond %{HTTP_HOST} ^animaisderua.org$ [NC]
	RewriteCond %{REQUEST_URI} !animaisderua.org/public/
	RewriteRule (.*) /animaisderua.org/public/$1 [L]
</IfModule>